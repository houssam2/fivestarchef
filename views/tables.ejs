<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Restaurant</title>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T"
        crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery.js"></script>
</head>

<body>

    <div class="container">
        <div class="jumbotron text-center">
            <h1 class="display-4">Joseph's Steakhouse </h1>
            <hr class="my-4">
            <div id="instructions">
                <h3>Max Capacity Five Tables </h3>
            </div>
            <!-- hide instruction button -->
            <div>
                <a href="/table" class="btn btn-secondary btn-lg " tabindex="-1" role="button" aria-disabled="true">View Tables</a>
                <a href="/reserve" class="btn btn-secondary btn-lg" tabindex="-1" role="button" aria-disabled="true">Make a Reservation</a>


            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel">
                    <div class="panel-heading">
                        <h4 class="panel-title"> Current Tables </h4>
                    </div>
                    <div class="panel-body" id="tablesection">
                        
                    </div>
                </div>
            </div>
        </div>

        <br><br><br>



        <div class="row">
            <div class="col-lg-12">
                <div class="panel">
                    <div class="panel-heading">
                        <h4 class="panel-title"> Waiting List  </h4>
                    </div>
                    <div class="panel-body" id="waitsection">
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    

    <script type="text/javascript">
    
    
    $.get("/api/table", function(data) {
        for (var i = 0; i < data.length; i++) {
            if (data[i].tableId != -1) {
                var d = $("<div>");
                d.addClass("panel-content"),
                d.append("<h2>" + data[i].tableId + " | " + data[i].id + "</h2");
                $("#tablesection").append(d);
            } else {
                var d = $("<div>");
                d.addClass("panel-content"),
                d.append("<h2>" + data[i].id + "</h2");
                $("#waitsection").append(d);
            }
        }
    });
    </script>



</body>

</html>